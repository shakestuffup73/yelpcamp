<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6 offset-3">
    <div class="alert alert-danger" role="alert">
      <h1>Oof! We've got an error...</h1>
      <h4 class="alert-heading"><%= error.message %></h4>
      <hr>
      <% if (process.env.NODE_ENV === "production") { %> 
      <p>
        <%= error.stack %>
      </p>
      <% } %> 
    </div>
  </div>
</div>