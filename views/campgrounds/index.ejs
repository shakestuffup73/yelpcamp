<% layout('layouts/boilerplate') %>

  <h1>All Campgrounds</h1>
  <div>
    <a class="row mb-3 col-6 offset-5" href="/campgrounds/new">Add a Campground</a>
  </div>
  <ul>
    <% for (let campground of campgrounds) { %>
      <div class="card mb-3">
        <div class="row">
          <div class="col-md-4">
            <% if (campground.images.length) { %>
              <img class="img-fluid" alt="" src="<%= campground.images[0].url %>">
            <% } else { %> 
              <img class="img-fluid" src="https://res.cloudinary.com/dgwexf22j/image/upload/v1675178929/YelpCamp/wvape760emvzotmhofwm.jpg" alt="wave crashing">
            <% } %> 
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
              <p class="card-text"><%= campground.description %></p>
              <p class="card-text">
                <small class="text-muted"> <%= campground.location %></small>
              </div>
              <a class="btn btn-primary mb-3" href="/campgrounds/<%= campground._id %>">View <%= campground.title %></a>
          </div>
        </div>
      </div>
    <% } %> 
  </ul>